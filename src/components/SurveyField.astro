---
import Selector from "@reactive/Selector.svelte";

interface Props {
  id: string;
  label: string;
  options: Array<string>;
  description?: string | null;
}

const { id, label, options, description = null } = Astro.props;
---

<div>
  <label class="block mb-2 font-medium text-slate-700">{label}</label>
  <Selector client:load id={id} options={options} storeItem="survey" />
  {
    description && (
      <span v-if="description" class="block mt-4 text-sm">
        {description}
      </span>
    )
  }
</div>
