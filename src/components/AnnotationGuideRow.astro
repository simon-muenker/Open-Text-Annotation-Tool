---
interface Props {
  name: string;
  definition: string;
  delimitation: string;
}

const { name, definition, delimitation } = Astro.props;
---

<tr class="text-slate-600">
  <td class="font-bold pr-4">{name}</td>
  <td class="py-4 border-b border-slate-200">
    <span class="i-mdi-check-circle align-text-top h-5 w-5 text-green-500"
    ></span>
    {definition}
    <span class="i-mdi-close-circle align-text-top h-5 w-5 text-red-500"></span>
    {delimitation}
  </td>
</tr>
