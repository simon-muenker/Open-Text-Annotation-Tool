<header class="bg-gray-900 text-white">
  <div
    class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
  >
    <div class="mx-auto max-w-7xl text-center">
      <h1
        class="py-2 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 bg-clip-text text-3xl font-extrabold text-transparent md:text-5xl lg:text-6xl 2xl:text-8xl"
      >
        <slot name="headline" />
      </h1>

      <p class="mx-auto py-4 max-w-4xl md:text-xl leading-relaxed">
        <slot name="intro" />
      </p>

      <div class="py-8 flex flex-wrap justify-center gap-4">
        <button
          class="block w-auto rounded-full bg-gradient-to-br from-green-300 via-blue-500 to-purple-600 p-4 text-white"
          id="startSurvey"
        >
          <span class="i-mdi-arrow-down align-text-top h-10 w-11"></span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const button = document.getElementById("startSurvey");

  if (button != null) {
    button.addEventListener("click", () => {
      window.scrollTo({
        top: window.innerHeight,
        left: 0,
        behavior: "smooth",
      });
    });
  }
</script>
